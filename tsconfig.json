{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@root/*": [
        "src/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@generated/*": [
        "src/generated/*"
      ]
    },
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2018"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
  "include": [
    "src"
  ]
}